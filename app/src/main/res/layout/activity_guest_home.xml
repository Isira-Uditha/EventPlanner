<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".GuestHome">


    <ListView
        android:id="@+id/guestList"
        android:layout_width="409dp"
        android:layout_height="500dp"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/idGuestCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Total : x"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/idGuestInvited"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/guestList"
        app:layout_constraintVertical_bias="0.821" />

    <TextView
        android:id="@+id/idGuestNotInvited"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Not Invited : x"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/idGuestInvited"
        app:layout_constraintTop_toBottomOf="@+id/guestList"
        app:layout_constraintVertical_bias="0.821" />

    <TextView
        android:id="@+id/idGuestInvited"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Invited : x"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/idGuestNotInvited"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/idGuestCount"
        app:layout_constraintTop_toBottomOf="@+id/guestList"
        app:layout_constraintVertical_bias="0.821" />


</androidx.constraintlayout.widget.ConstraintLayout>
